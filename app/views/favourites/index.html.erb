<h1>My Garage</h1>

<ul>
  <% @favourites.each do |favourite| %>
    <% car = favourite.car %>
    <li>
      <%= link_to "#{car.brand} #{car.model}", car_path(car) %>
      <%= button_to "Remove", favourite_path(favourite), data: { turbo_method: :delete, turbo_confirm: "Remove from garage?" } %>
    </li>
  <% end %>
</ul>
